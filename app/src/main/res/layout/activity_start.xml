<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="github.com.junhyoung.kill.StartActivity"
    android:background="@drawable/back">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="돌아가기"
        android:id="@+id/bt_clear"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="Exit"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ex1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="1."
        android:onClick="ex1" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ex2"
        android:layout_below="@+id/ex1"
        android:layout_centerHorizontal="true"
        android:text="2."
        android:onClick="ex2" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ex3"
        android:layout_below="@+id/ex2"
        android:layout_centerHorizontal="true"
        android:text="3."
        android:onClick="ex3"
        android:layout_alignParentStart="false"
        android:contextClickable="false" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ex4"
        android:layout_below="@+id/ex3"
        android:layout_centerHorizontal="true"
        android:text="4."
        android:onClick="ex4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="분야 :"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="정답 / 오답"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bt_clear"
        android:layout_alignEnd="@+id/bt_clear"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:text="문제"
        android:id="@+id/textView4"
        android:layout_above="@+id/ex1"
        android:layout_alignLeft="@+id/ex1"
        android:layout_alignStart="@+id/ex1"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/ex1"
        android:layout_alignEnd="@+id/ex1"
        android:textColor="#ffffff"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="문제 수"
        android:id="@+id/textView"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="답은 1번"
        android:textColor="#000000"
        android:id="@+id/pro"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/textView4" />

</RelativeLayout>
